{
  "name": "crud-api-ts",
  "version": "1.0.0",
  "description": "Simple CRUD + REST API writen on ts",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": "24.10.0",
    "npm": ">=10.9.0"
  },
  "scripts": {
    "build": "tsc",
    "start:dev": "nodemon --exec \"node --loader ts-node/esm src/server.ts\"",
    "start:prod": "npm run build && node dist/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alexander-Lucens/crud-api-ts.git"
  },
  "keywords": [
    "crud-api-ts"
  ],
  "author": "@Alexander-Lucens",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alexander-Lucens/crud-api-ts/issues"
  },
  "homepage": "https://github.com/Alexander-Lucens/crud-api-ts#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2"
  }
}
